@model FitBody.WebUI.Model.BlogViewModel

@using Syncfusion.EJ2
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>





<!-- sidebar element declaration -->
<!-- end of sidebar element -->
<!-- main content declaration -->

<div id="main-content container-fluid col-md-12 " style="margin-left: 75px;">
    <div class="container" style="margin-top: 100px;">
        <div style="width: 90%; margin: 0 auto;">
            <table class="cell-border" style="width: 100%" id="myTable">
                <thead>
                <tr>
                    <th>Time</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var blogPost in Model.BlogPosts)
                    {
                       

                        <tr>
                            <td>@blogPost.Time.ToString("MM/dd/yyyy")</td>
                            <td>@blogPost.Title</td>
                            <td>
                                <img src="@blogPost.Image" width="50px;" height="50px;" />
                            </td>
                            <td>@blogPost.Summary.Substring(0,20)</td>
                           
                            <td>
                                <a asp-action="BlogPostEdit" asp-controller="Admin" asp-route-blogId="@blogPost.ID" class="btn btn-success">Edit</a>
                                <a asp-action="BlogPostDelete" asp-controller="Admin" asp-route-ID="@blogPost.ID" class="btn btn-danger">Delete</a>
                            </td>



                        </tr>
                    }


                </tbody>
            </table>


        </div>
    </div>
</div>

