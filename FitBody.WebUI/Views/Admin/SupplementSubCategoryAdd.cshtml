@model FitBody.WebUI.Model.SupplementSubCategoryAddViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Admin" asp-action="SupplementSubCategoryAdd" method="post">
    <div class="container">
        <div class="form-group">
            <label asp-for="SupplementSubCategory.SuplementSubCategoryName">Supplement Sub Category Name</label>
            <input asp-for="SupplementSubCategory.SuplementSubCategoryName" class="form-control" placeholder="Supplement Sub Category Name"/>
            <span asp-validation-for="SupplementSubCategory.SuplementSubCategoryName"></span>
        </div>
        <div class="form-group">
            <label asp-for="SupplementSubCategory.SupplementCategoryID">Supplement Category </label>
            <select asp-for="SupplementSubCategory.SupplementCategoryID" class="form-control" asp-items="@{new SelectList(Model.SupplementCategory,"ID","CategoryName")}"></select>
            <span asp-validation-for="SupplementSubCategory.SupplementCategoryID"></span>
        </div>
        <input type="submit" value="Add Supplement Sub Category" class="btn-success"/>
    </div>
</form>