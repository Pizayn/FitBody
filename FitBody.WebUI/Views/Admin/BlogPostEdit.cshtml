@model FitBody.WebUI.Model.BlogPostEditViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Text Editors
        <small>Advanced form element</small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">
                        CK Editor
                        <small>Advanced and full of features</small>
                    </h3>
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip"
                                title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body pad">
                    <form asp-action="BlogPostEdit" asp-controller="Admin" method="post">
                        <div class="form-group">
                            <textarea id="editor1" asp-for="BlogPost.Description" rows="10" cols="80">
                                            This is my textarea to be replaced with CKEditor.
                    </textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="BlogPost.Image">Image Url</label>
                            <input asp-for="BlogPost.Image" class="form-control" placeholder="Image Url" />
                            <span asp-validation-for="BlogPost.Image"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BlogPost.Title">Title</label>
                            <input asp-for="BlogPost.Title" class="form-control" placeholder="Title" />
                            <span asp-validation-for="BlogPost.Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BlogPost.Summary">Summary</label>
                            <input asp-for="BlogPost.Summary" class="form-control" placeholder="Summary" />
                            <span asp-validation-for="BlogPost.Summary"></span>
                        </div>
                        <input type="hidden" asp-for="BlogPost.Time" />
                        <input type="hidden" asp-for="BlogPost.AccountId" />
                        <input type="hidden" asp-for="BlogPost.ID"/>
                        <input type="submit" class="btn btn-success" value="Update" />
                    </form>
                </div>
            </div>
            <!-- /.box -->


        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section>
<!-- /.content -->
