@model FitBody.WebUI.Model.ExerciseViewModel

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="site-section-heading text-center">Exercises</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 block-13 nav-direction-white">
                    <div class="nonloop-block-13 owl-carousel">
                        @foreach (var exercise in Model.Exercises)
                        {
                            <div class="media-image">
                                <img src=@exercise.Image alt="Image" class="img-fluid" style="width: 356px; height: 267px;">
                                <div class="media-image-body">
                                    <h2>@exercise.ExerciseName</h2>
                                    <p>@exercise.Summary</p>
                                    <p><a asp-controller="Exercise" asp-action="Details" asp-route-exerciseId="@exercise.ID" class="btn btn-primary text-white px-4"><span class="caption">Learn More</span></a></p>
                                </div>
                            </div>
                        }
                                                                                     
                    </div>
                </div>
            </div>
        </div>
    </div>
